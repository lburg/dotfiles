# Path to your oh-my-zsh configuration.
ZSH=$HOME/.oh-my-zsh
ZSH_THEME="sunrise"
# Use this to get a newline in prompt
# PROMPT='%B$PROMPTPREFIX %2~ $(custom_git_prompt)%{$M%}%B'$'\n''Â»%b%{$RESET%} '

# Customize to your needs...
export PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/usr/games:/usr/lib/colorgcc/bin

# 'ls' relies on this for colors, as well as some other commands
eval `dircolors ~/.dir_colors/solarized_dark`

# Path for fzf plugin to find fzf binary
export FZF_BASE=/usr/share/fzf
export FZF_CTRL_R_OPTS='--reverse'

# Which plugins would you like to load? (plugins can be found in ~/.oh-my-zsh/plugins/*)
# Custom plugins may be added to ~/.oh-my-zsh/custom/plugins/
# Example format: plugins=(rails git textmate ruby lighthouse)
plugins=(django kubectl fancy-ctrl-z fzf git git-flow poetry virtualenvwrapper)

source $ZSH/oh-my-zsh.sh

# Initialize autocompletion with extra functions
autoload -U compinit && compinit
autoload -U bashcompinit && bashcompinit

# Enable emacs command line edition
bindkey -e  # vim doesn't handle ctrl-z properly

# pyenv (oh-my-zsh plugin doesn't seem to load virtualenv correctly)
export PYENV_ROOT=$HOME/.pyenv
export PATH=$PYENV_ROOT/bin:$PATH
if command -v pyenv 1>/dev/null 2>&1; then
  eval "$(pyenv init -)"
  eval "$(pyenv virtualenv-init -)"
fi
# virtualenvwrapper uses pyenv virtualenv
export PYENV_VIRTUALENVWRAPPER_PREFER_PYVENV="true"
pyenv virtualenvwrapper_lazy

# add 'env PYTHON_CONFIGURE_OPTS="--enable-framework"' so that 'pyenv install' installs shared libraries

# poetry
export PATH=$HOME/.poetry/bin:$PATH

# Created by `userpath` on 2019-12-16 14:40:57
export PATH="$PATH:/home/lburg/.local/bin"
eval "$(register-python-argcomplete pipx)"
