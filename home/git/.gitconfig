[color]
    ui = auto
    branch = auto
    diff   = auto
    status = auto
    grep = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow
    frag = magenta
    old = red
    new = cyan

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[alias]
    st        = status
    ci        = commit
    br        = branch
    co        = checkout
    df        = diff
    dc        = diff --cached
    lg        = log -p
    pr        = pull --rebase
    p         = push
    lol       = log --graph --decorate --pretty=oneline --abbrev-commit
    lola      = log --graph --decorate --pretty=oneline --abbrev-commit --all
    latest    = for-each-ref --sort=-taggerdate --format='%(refname:short)' --count=1
    commend = commit --amend --no-edit
    pfwl    = push --force-with-lease
    sw      = switch
    # Top 10 contributors on a file
    top10   = ! git log --pretty=format: --name-only | grep -v '^$' | sort | uniq -c | sort -rg | head -10
    # Commits affecting a file
    his     = log --follow --color=always --date=format:'%Y-%m-%d' --pretty=format:'(%Cgreen%h%Creset)[%ad] %s'

[branch]
    autosetupmerge = true

[core]
    pager = less -XFR
    autoclrf = input
    excludesfile = ~/.gitignore_global

[push]
    default = upstream

[grep]
    lineNumber = true

[merge]
    tool = vimdiff
    conflictstyle = diff3

[mergetool]
    prompt = false

[commit]
    verbose = true

# Shows content of vaulted files (requires a .gitattributes configuration in the repository too,
# lookup "diff=ansible-vault merge=binary")
[diff "ansible-vault"]
    cachetextconv = false
    textconv = "ansible-vault view"

# local config
[include]
    path = ~/.gitconfig_local
