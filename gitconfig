[color]
    ui = auto
    branch = auto
    diff   = auto
    status = auto
    grep = always

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[alias]
    st        = status
    ci        = commit
    br        = branch
    co        = checkout
    df        = diff
    dc        = diff --cached
    lg        = log -p
    pr        = pull --rebase
    p         = push
    lol       = log --graph --decorate --pretty=oneline --abbrev-commit
    lola      = log --graph --decorate --pretty=oneline --abbrev-commit --all
    latest    = for-each-ref --sort=-taggerdate --format='%(refname:short)' --count=1
    unstage   = reset HEAD
    # there should be an article on what this command do
    uncommit = !zsh -c '"if (($0)); then nb=$(( $0 - 1 )); else nb=0; fi; i=0; while ((i<=nb)); do git revert -n --no-edit HEAD~$i; ((i++)); done; git commit -m \"revert to $0 version(s) back\""'
    undomerge = reset --hard ORIG_HEAD
    conflict  = !gitk --left-right HEAD...MERGE_HEAD
    commend = commit --amend --no-edit
    pfwl    = push --force-with-lease

[alias]
    etat = status
    pousser = push
    tirer = pull
    commettre = commit
    ranger = stash
    ajouter = add
    enlever = rm
    cloner = clone
    fusionner = merge
    distant = remote
    branche = branch
    difference = diff
    journal = log
    cueillette = cherry-pick
    configuration = config
    nettoyer = clean
    recuperer = fetch
    etiquetter = tag
    afficher = show
    deplacer = mv
    rabouter = rebase
    denoncer = blame
    stapo = blame
    inverser = revert

[branch]
    autosetupmerge = true

