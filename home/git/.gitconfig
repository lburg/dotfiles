[color]
    ui = auto
    branch = auto
    diff   = auto
    status = auto
    grep = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow
    frag = magenta
    old = red
    new = cyan

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[alias]
    st        = status
    ci        = commit
    br        = branch
    co        = checkout
    df        = diff
    dc        = diff --cached
    lg        = log -p
    pr        = pull --rebase
    p         = push
    lol       = log --graph --decorate --pretty=oneline --abbrev-commit
    lola      = log --graph --decorate --pretty=oneline --abbrev-commit --all
    latest    = for-each-ref --sort=-taggerdate --format='%(refname:short)' --count=1
    commend = commit --amend --no-edit
    pfwl    = push --force-with-lease
    sw      = switch

[alias]  # mostly a joke
    etat = status
    pousser = push
    tirer = pull
    commettre = commit
    ranger = stash
    ajouter = add
    enlever = rm
    cloner = clone
    fusionner = merge
    distant = remote
    branche = branch
    difference = diff
    journal = log
    cueillette = cherry-pick
    configuration = config
    nettoyer = clean
    recuperer = fetch
    etiquetter = tag
    afficher = show
    deplacer = mv
    rabouter = rebase
    denoncer = blame
    stapo = blame
    inverser = revert

[branch]
    autosetupmerge = true

[user]
    name = Lo√Øs Burg
    email = lois.burg@protonmail.com

[core]
    pager = less -XFR
    autoclrf = input
    excludesfile = ~/.gitignore_global

[push]
    default = upstream

[grep]
    lineNumber = true

[merge]
    tool = vimdiff
    conflictstyle = diff3

[mergetool]
    prompt = false

[commit]
    verbose = true

# Shows content of vaulted files (requires a .gitattributes configuration in the repository too,
# lookup "diff=ansible-vault merge=binary")
[diff "ansible-vault"]
    cachetextconv = false
    textconv = "ansible-vault view"
